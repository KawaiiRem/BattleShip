<Window x:Class="BattleShip_DSA_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleShip_DSA_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Background="BlanchedAlmond">
            <Grid Grid.Row="0" Height="140">
                <Label Content="Battle Ship" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="72" FontFamily="Arial Rounded MT Bold" Height="99" Width="393" Foreground="#FF345B90"/>
            </Grid>
            <Grid Grid.Row="1" Height="auto">
                <Button Width="360" Height="120" Margin="16" Content="Start!" Grid.Row="1" FontSize="48" Foreground="#FFF1A90A" Background="#FF345B90"  FontWeight="Bold" Click="btnPlay"></Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
