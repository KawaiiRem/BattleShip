<Page x:Class="BattleShip_DSA_Project.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BattleShip_DSA_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPage">

    <Grid>
        <StackPanel Background="white">
            <Grid Grid.Row="0" Height="140">
                <Label Content="Setting" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="72" FontFamily="Arial Rounded MT Bold" Height="100" Width="267" Foreground="#FF345B90"/>
            </Grid>
            <Grid Grid.Row="1" Height="80">
                <Button Width="360" Margin="16" Content="Sound" Grid.Row="1" FontSize="24" Foreground="#FFF1A90A" Background="#FF345B90"  FontWeight="Bold" Click="btnSound_Click"></Button>
            </Grid>
            <Grid Grid.Row="2" Height="80">
                <Button Width="360" Margin="16" Content="Window Size" Grid.Row="2" FontSize="24" Foreground="#FFF1A90A" Background="#FF345B90" FontWeight="Bold" Click="btnWinSize_Click"/>
            </Grid>
            <Grid Grid.Row="3" Height="80">
                <Button Width="360" Margin="16" Content="Hidden" Grid.Row="3" FontSize="24" Foreground="#FFF1A90A" Background="#FF345B90" FontWeight="Bold" Click="btnHidden_Click"></Button>
            </Grid>
            <Grid Grid.Row="4" Height="30">
                <Button Width="150" Margin=" 0 0 480 0" Content="Back" Background="#FF9A0707" FontWeight="Bold" Click="btnBack"></Button>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
